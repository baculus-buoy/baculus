# A quick way to start the docker container for development
# Expects an ssb-routerless image, which we need to create a dockerfile for at some point

letter=${1:-a}

docker run -it \
  --sysctl net.ipv6.conf.all.disable_ipv6=0 \
  --cap-add NET_ADMIN \
  --cap-add NET_BROADCAST \
  --env ssb_appname=bac \
  --env NPM_CONFIG_PREFIX=/home/node/npm/global \
  --entrypoint /bin/bash \
  ssb-routerless:$letter entry.sh
